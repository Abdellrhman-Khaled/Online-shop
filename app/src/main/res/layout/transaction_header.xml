<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:elevation="4dp">

    <TextView
        android:id="@+id/header_order_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Order ID"
        android:textSize="13sp"
        android:textColor="#616161"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/header_username"
        app:layout_constraintWidth_percent="0.13" />

    <TextView
        android:id="@+id/header_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="13sp"
        android:textColor="#616161"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/header_order_id"
        app:layout_constraintEnd_toStartOf="@id/header_date"
        app:layout_constraintWidth_percent="0.17" />

    <TextView
        android:id="@+id/header_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="13sp"
        android:textColor="#616161"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/header_username"
        app:layout_constraintEnd_toStartOf="@id/header_price"
        app:layout_constraintWidth_percent="0.20" />

    <TextView
        android:id="@+id/header_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="13sp"
        android:textColor="#616161"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/header_date"
        app:layout_constraintEnd_toStartOf="@id/header_actions"
        app:layout_constraintWidth_percent="0.20" />

    <TextView
        android:id="@+id/header_actions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Actions"
        android:textSize="13sp"
        android:textColor="#616161"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/header_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.18" />

</androidx.constraintlayout.widget.ConstraintLayout>
