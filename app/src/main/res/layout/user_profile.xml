<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:contentDescription="App Logo"
            android:src="@drawable/applogo"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvProfileMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Your Profile"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProfileMessage"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="4dp">

                <!-- Username Field -->
                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username: [USERNAME]"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Full Name Field -->
                <TextView
                    android:id="@+id/tvFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full Name: [FULL NAME]"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Email Field -->
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: [EMAIL]"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Phone Number Field -->
                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number: [PHONE NUMBER]"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Gender Field -->
                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender: [GENDER]"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Birthdate Field -->
                <TextView
                    android:id="@+id/tvBirthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Birthdate: [BIRTHDATE]"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Edit Button -->
                <Button
                    android:id="@+id/btnEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:padding="12dp" />
                <Button
                    android:id="@+id/vieworderbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View my order"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/btnAddAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add New Account"
                    android:backgroundTint="#2196F3"
                    android:textColor="#FFFFFF"
                    android:padding="12dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <!-- Home Button -->
            <LinearLayout
                android:id="@+id/edithomeBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="#989899"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!-- Discover Button -->
            <LinearLayout
                android:id="@+id/editdiscoverBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/discovery" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discover"
                    android:textColor="#b9c0b2"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!-- Cart Button -->
            <LinearLayout
                android:id="@+id/editcartBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cart"
                    android:textColor="#989899"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!-- Profile Button -->
            <LinearLayout
                android:id="@+id/editprofileBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/userselected" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="#989899"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>